# Twitter API v2 credentials (get from developer portal)
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_CONSUMER_KEY=your_consumer_key_here
TWITTER_CONSUMER_SECRET=your_consumer_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Database
DATABASE_URL=sqlite:///./bot.db

# User content sources
BLOG_URL=https://yourblog.com
GITHUB_USERNAME=your_github_username
TWITTER_HANDLE=@your_handle

# Bot settings
TWEET_FREQUENCY_HOURS=4
MAX_THREAD_LENGTH=3
VIRAL_POINTS_THRESHOLD=200
VIRAL_VOLUME_THRESHOLD=10000

# RSS feeds (comma-separated)
RSS_FEEDS=https://techcrunch.com/feed/,https://hnrss.org/frontpage

# OpenAI API (for PydanticAI)
OPENAI_API_KEY=your_openai_key_here